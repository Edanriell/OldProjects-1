<% include ./partials/header %>
    <div class="row">
        <div class="col-md-12">
            <form class="form-signin" action="/register" method="POST">
                <h1 class="h3 mb-3 font-weight-normal">Please sign up</h1>
                <label for="inputUsername" class="sr-only">Username</label>
                <input type="text" id="inputUsername" class="form-control" name="username" placeholder="Username" required="" autofocus="" kl_ab.original_type="email">
                <label for="inputPassword" class="sr-only">Password</label>
                <input type="password" id="inputPassword" name="password" class="form-control" placeholder="Password" required="">

                <label for="adminCode" class="sr-only">Enter Secret Code</label>
                <input type="text" id="adminCode" class="form-control mb-3 rounded border border-info" name="adminCode" placeholder="Enter Secret Code" autofocus="" kl_ab.original_type="adminCode">

                <label for="firstName" class="sr-only">First Name</label>
                <input type="text" id="firstName" class="form-control mb-3 rounded border border-dark" name="firstName" placeholder="First Name" autofocus="" kl_ab.original_type="firstName">
                <label for="lastName" class="sr-only">Last name</label>
                <input type="text" id="lastName" class="form-control mb-3 rounded border border-dark" name="lastName" placeholder="Last Name" autofocus="" kl_ab.original_type="lastName">
                <label for="email" class="sr-only">Type your email</label>
                <input type="text" id="email" class="form-control mb-3 rounded border border-dark" name="email" placeholder="example@gmail.com" autofocus="" kl_ab.original_type="email">
                <label for="avatar" class="sr-only">Avatar URL</label>
                <input type="text" id="avatar" class="form-control mb-3 rounded border border-dark" name="avatar" placeholder="Avatar URL" autofocus="" kl_ab.original_type="avatar">
                
                <button class="btn btn-lg btn-primary btn-block" type="submit">Sign up</button>
            </form>
            <div class="form-signin">
                <a href="/campgrounds">Go Back</a>
            </div>
        </div>
    </div>
<% include ./partials/footer %>

